    fontWeight: '600',
    color: '#6b7280',
    textAlign: 'center',
  },
  row: {
    flexDirection: 'row',
    borderBottomWidth: 1,
    borderBottomColor: '#f3f4f6',
    paddingVertical: 8,
    minHeight: 50,
  },
  atmRow: {
    backgroundColor: '#fef3c7',
  },
  callSection: {
    flex: 3,
    flexDirection: 'row',
    alignItems: 'center',
